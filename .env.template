# Google Maps Platform API Configuration
# Get your API key from: https://console.cloud.google.com/google/maps-apis/credentials
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Monitoring Configuration
# How often to check travel times (in seconds)
POLLING_INTERVAL_SECONDS=300

# Default timeout for monitoring sessions (in minutes)  
DEFAULT_TIMEOUT_MINUTES=120

# Maximum number of concurrent monitoring sessions
MAX_CONCURRENT_SESSIONS=10

# Logging Configuration
LOG_LEVEL=INFO