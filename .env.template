# Google Maps Platform API Configuration
# Get your API key from: https://console.cloud.google.com/google/maps-apis/credentials
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Rate Limiting Configuration
# Conservative limits to stay within Google's $200/month free tier
API_REQUESTS_PER_MINUTE=50
API_REQUESTS_PER_DAY=1000

# Monitoring Configuration
# How often to check travel times (in seconds) - 5 minutes is conservative
POLLING_INTERVAL_SECONDS=300

# Default timeout for monitoring sessions (in minutes)  
DEFAULT_TIMEOUT_MINUTES=120

# Maximum number of concurrent monitoring sessions
MAX_CONCURRENT_SESSIONS=10

# Logging Configuration
LOG_LEVEL=INFO